# Example environment variables for Essentia Audio Service
# Copy this file to `.env` and fill in the real values. Do NOT commit real secrets.

# MongoDB connection string used to persist analysis data
# Example local: mongodb://localhost:27017/essentia
MONGODB_URI=

# Port to run the service (defaults to 3001)
PORT=3001

# Spotify API credentials (required for improved Spotify-based flows)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Comma-separated list of markets for preview recovery (optional)
# Default used by code: US,GB,DE,SE,CA
SPOTIFY_PREVIEW_MARKETS=US,GB,DE,SE,CA

# Optional feature flags
PREFER_DEEZER=

# Opt-in dev fallback: set to true to allow a local dev Mongo fallback in server when
# an explicit MONGODB_URI is not provided (server must check ENABLE_DEV_DB_FALLBACK).
ENABLE_DEV_DB_FALLBACK=false

# SECURITY: keep your real `.env` out of version control. Add `.env` to .gitignore.
